plugin.tx_powermail {
    settings {
        setup {
            finishers {
                # Override powermail's RedirectFinisher
                100.class = FriendsOfTYPO3\HeadlessPowermail\Finisher\RedirectFinisher
            }
        }
    }
}

tt_content.list =< lib.contentElementWithHeader
tt_content.list {
    fields {
        content {
            fields {
                data = CASE
                data {
                    key.field = list_type

                    powermail_pi1 = USER
                    powermail_pi1 {
                        userFunc = TYPO3\CMS\Extbase\Core\Bootstrap->run
                        vendorName = In2code
                        extensionName = Powermail
                        pluginName = Pi1
                        controller = Form
                    }
                }
            }
        }
    }
}
